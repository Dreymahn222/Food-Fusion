<body>

  <header>
    <h1>Food Fusion</h1>
  </header>

  <div class="search-bar">
    <input type="text" id="searchInput" placeholder="Search for recipes..." onkeyup="searchRecipes(event)" />
  </div>

  <div class="hero">
    <h2>üç≤ Try Our Most Popular Recipes!</h2>
    <p>Search your favorite meals</p>
  </div>

  <div class="categories">
    <button onclick="fetchRecipes('pasta')">Pasta</button>
    <button onclick="fetchRecipes('chicken')">Chicken</button>
    <button onclick="fetchRecipes('dessert')">Dessert</button>
    <button onclick="fetchRecipes('vegan')">Vegan</button>
    <button onclick="fetchRecipes('salad')">Salad</button>
  </div>

  <div class="cards" id="recipeCards"></div>

  <footer>
    <p>About | Contact | Privacy</p>
  </footer>

  <script>
    const apiKey = '9227959018934aabbb5e339b607e3310';

    async function fetchRecipes(query = 'chicken') {const res = await fetch(`https://api.spoonacular.com/recipes/complexSearch?query=query   number=9   apiKey={apiKey}`);
      const data = await res.json();
      displayRecipes(data.results);
    }

    function searchRecipes(event) {
      if (event.key === 'Enter') {
        const query = document.getElementById('searchInput').value;
        fetchRecipes(query);
      }
    }

    function displayRecipes(recipes) {
      const container = document.getElementById('recipeCards');
      container.innerHTML = '';

      if (!recipes || recipes.length === 0) {
        container.innerHTML = '<p>No recipes found.</p>';
        return;
      }

      recipes.forEach(recipe => {
        container.innerHTML += `
          <div class="card">
            <img src="recipe.image" alt="{recipe.title}" />
            <h3>recipe.title</h3>
            <p><a href="https://spoonacular.com/recipes/{recipe.title.replace(/ /g, '-')}-${recipe.id}" target="_blank">View Recipe</a></p>
          </div>
        `;
      });
    }

    fetchRecipes();
  </script>

</body>
